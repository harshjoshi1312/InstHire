<% layout("/layouts/boilerplate.ejs") %>
<div class="row">
  <div class="col-8 offset-2">
    <h1>List New Openings</h1>
    <form method="post" action="/two" novalidate class="needs-validation">
      <div class="mb-3">
        <label for="name" class="form-label"> Enter title</label>
        <input name="listing[name]" placeholder="name" name" type="text"
        class="form-control" required />
        <div class="invalid-feedback">Please Enter name</div>
      </div>
      <div class="mb-3">
        <label for="role" class="form-label"> Enter your Role</label>
        <input
          name="listing[role]"
          placeholder="need expertice"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please Enter your Role</div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label"> write your info</label>
        <input
          name="listing[description]"
          placeholder="job-description"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please Enter job description</div>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label"> Image Link</label>
        <input
          name="listing[image]"
          placeholder="enter image URL/link"
          type="text"
          class="form-control"
        />
        <div class="invalid-feedback">Please Enter ImageLink</div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">
          Enter Your prefered Location</label
        >
        <input
          name="listing[location]"
          placeholder="remote/Onsite"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please Enter Valid Location</div>
      </div>

      <div class="mb-3">
        <label for="stipend" class="form-label"> stipend expect</label>
        <input
          name="listing[stipend]"
          placeholder="stipend INR"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please Enter Stipend / salary</div>
      </div>
      <div class="mb-3">
        <label for="applydate" class="form-label"> application stsrts</label>
        <input
          name="listing[applydate]"
          placeholder="stipend INR"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">application starts from</div>
      </div>
      <div class="mb-3">
        <label for="mail" class="form-label">mail</label>
        <input
          name="listing[mail]"
          placeholder="valid compony mail"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">enter valid mail</div>
      </div>

      <button class="btn btn-dark add-btn">Add new openings</button>
    </form>
  </div>
</div>
