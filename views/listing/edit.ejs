<% layout("/layouts/boilerplate.ejs") %>
<div class="row">
  <div class="col-8 offset-2">
    <h1>Update your developer Profile</h1>
    <form
      method="post"
      action="/first/<%= listing._id %>?_method=PUT"
      novalidate
      class="needs-validation"
    >
      <div class="mb-3">
        <label for="name" class="form-label"> Name</label>
        <input
          name="new[name]"
          value="<%= listing.name %>"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please Enter name</div>
      </div>

      <div class="mb-3">
        <label for="role" class="form-label"> Role</label>
        <input
          name="new[role]"
          value="<%= listing.role %>"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please Enter valid Role</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label"> Description</label>
        <input
          name="new[description]"
          value="<%= listing.description %>"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please Enter description</div>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label"> Image Link</label>
        <input
          name="new[image]"
          value="<%= listing.image %>"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please Enter Image</div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label"> Location</label>
        <input
          name="new[location]"
          value="<%= listing.location %>"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please Enter Location</div>
      </div>

      <div class="mb-3">
        <label for="country" class="form-label"> Country</label>
        <input
          name="new[country]"
          value="<%= listing.country %>"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please Enter Country</div>
      </div>
        <div class="mb-3">
        <label for="mail" class="form-label"> Enter Your Valid mail</label>
        <input
          name="listing[mail]"
          placeholder="valid mail address"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please Enter valid mail</div>
      </div>

      <br /><br />
      <button class="btn btn-dark edit-btn">Edit your profile</button>
    </form>
  </div>
</div>
